<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical" >
    <TextView 
        style="@style/Text.Small"
        android:id="@+id/recent_item_date_field"
        android:layout_width="@dimen/column_date_width"
        android:layout_height="wrap_content"
        android:gravity="center"/>
    <View 
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:background="@drawable/divider_horizontal_bright"/>
    <TextView 
        style="@style/Text.Small"
        android:id="@+id/recent_item_score_field"
        android:layout_width="@dimen/column_score_width"
        android:layout_height="wrap_content"
        android:gravity="center"/>
    <View 
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:background="@drawable/divider_horizontal_bright"/>
    <ImageView 
        android:id="@+id/recent_item_star_field"
        android:layout_width="@dimen/column_star_width"
        android:layout_height="wrap_content"
        android:src="@drawable/star"
        android:gravity="center"/>
    <View 
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:background="@drawable/divider_horizontal_bright"/>
    <TextView 
        style="@style/Text.Small"
        android:id="@+id/recent_item_time_field"
        android:layout_width="@dimen/column_time_width"
        android:layout_height="wrap_content"
        android:gravity="center"/>
    <View 
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:background="@drawable/divider_horizontal_bright"/>
    <TextView 
        style="@style/Text.Small"
        android:id="@+id/recent_item_steps_field"
        android:layout_width="@dimen/column_steps_width"
        android:layout_height="wrap_content"
        android:gravity="center"/>
</LinearLayout>